<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_screen"
    android:nestedScrollingEnabled="true"
    tools:context=".EditProfileActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_white"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:text="Complete Profile"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constName"
        android:visibility="visible"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Nom d'utilisateur"
            app:startIconDrawable="@drawable/iconsuser"
            app:prefixText="+223"
            android:id="@+id/edlayoutPhone"
            android:layout_width="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edName"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Age "
            app:suffixText="ans"
            android:id="@+id/edlayoutPassword"
            android:layout_width="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edlayoutPhone">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edAge"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtno1"
            android:text="Je suis un(e):"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/edlayoutPassword"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/imgMen"
            android:src="@drawable/men_no"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@id/imgWomen"
            app:layout_constraintTop_toBottomOf="@id/txtno1"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/imgWomen"
            android:src="@drawable/women_no"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/imgMen"
            app:layout_constraintTop_toBottomOf="@id/txtno1"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constCountry"
        android:visibility="invisible"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Pays"
            app:startIconDrawable="@drawable/iconsuser"
            app:prefixText="+223"
            android:id="@+id/edlayoutCountry"
            android:layout_width="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edCountry"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtno6"
            android:text="Quel langue parler vous ?"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/edlayoutCountry"
            app:layout_constraintStart_toStartOf="@id/edlayoutCountry"/>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardFrench"
            android:backgroundTint="@color/disabled_background"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtno6"
            app:layout_constraintStart_toStartOf="@id/txtno6">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/iconsfrench"
                android:layout_gravity="center|start"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FranÃ§ais"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardEnglish"
            android:backgroundTint="@color/disabled_background"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtno6"
            app:layout_constraintStart_toEndOf="@id/cardFrench">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/iconsenglish"
                android:layout_gravity="center|start"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anglais"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtno7"
            android:text="Je parle:"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/cardFrench"
            app:layout_constraintTop_toBottomOf="@id/cardFrench"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSelectedLanguage"
            android:text="Aucune"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_purple"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/txtno7"
            app:layout_constraintTop_toBottomOf="@id/cardFrench"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constProfile"
        android:visibility="invisible"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgSelectProfile"
            android:src="@drawable/iconsprofile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtSelectProfile"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSelectProfile"
            android:text="Prendre une photo de profile"
            android:textColor="@color/text_purple"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgSelectProfile"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constContact"
        android:visibility="invisible"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtWarning"
            android:text="@string/warning1"
            android:textColor="@color/text_red"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Contact email"
            android:id="@+id/edlayoutGmail"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtWarning">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/iconsgmail"
                android:drawablePadding="8dp"
                android:id="@+id/edGmail"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Messenger "
            app:suffixText="ans"
            android:id="@+id/edlayoutMessenger"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edlayoutGmail">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="8dp"
                android:id="@+id/edMessenger"
                android:drawableStart="@drawable/iconsmessenger"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="whatsapp "
            app:suffixText="ans"
            android:id="@+id/edlayoutWhatssap"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edlayoutMessenger">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="8dp"
                android:id="@+id/edWhatsapp"
                android:drawableStart="@drawable/iconswhatsapp"
                android:inputType="phone"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkContact"
            android:gravity="top|start"
            android:text="@string/check1"
            android:textColor="@color/text_red"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edlayoutWhatssap"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constRelation"
        android:visibility="invisible"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNo2"
            android:text="Type de relation recherchÃ©"
            android:textColor="@color/text_purple"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardMariage"
            android:layout_margin="15dp"
            android:backgroundTint="@color/disabled_background"
            app:layout_constraintTop_toBottomOf="@id/txtNo2"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconsring"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mariage"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardRelationSerieus"
            android:layout_margin="15dp"
            android:backgroundTint="@color/disabled_background"
            app:layout_constraintTop_toBottomOf="@id/cardMariage"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconsflower"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relation Serieuse"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardLove"
            android:layout_margin="15dp"
            android:backgroundTint="@color/disabled_background"
            app:layout_constraintTop_toBottomOf="@id/cardRelationSerieus"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconsheart"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relation Serieuse"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardFriend"
            android:layout_margin="15dp"
            android:backgroundTint="@color/disabled_background"
            app:layout_constraintTop_toBottomOf="@id/txtNo2"
            app:layout_constraintStart_toEndOf="@id/cardMariage"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconsfriend"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AmitiÃ©"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardSex"
            android:backgroundTint="@color/disabled_background"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardMariage"
            app:layout_constraintStart_toEndOf="@id/cardRelationSerieus"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconssex"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relation Sexuel"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/cardUnknown"
            android:layout_margin="15dp"

            app:layout_constraintTop_toBottomOf="@id/cardRelationSerieus"
            app:layout_constraintStart_toEndOf="@id/cardLove"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconsunknown"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inconnue"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtno3"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:text="Je recherche une relation: "
            app:layout_constraintTop_toBottomOf="@id/cardLove"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSeeking"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:text="Inconnue"
            android:textStyle="bold"
            android:textColor="@color/text_purple"
            app:layout_constraintTop_toBottomOf="@id/cardLove"
            app:layout_constraintStart_toEndOf="@id/txtno3"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constConfirm"
        android:visibility="invisible"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtno5"
            android:text="Confirmer vos information"
            android:textColor="@color/text_purple"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:id="@+id/cardProfil"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/txtno5"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/imgProfile"
                    android:background="@color/purple_200"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imgWanted"
                    android:src="@drawable/iconsunknown"
                    android:padding="8dp"
                    android:background="@drawable/circlewhite"
                    android:layout_marginBottom="35dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCountry"
                    android:text="Pays"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/imgProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtIsOnline"
                    android:text="En ligne"
                    android:textSize="12sp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/imgProfile"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:text="Name User"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/txtIsOnline"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsername"
            android:text="User's Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/cardProfil"
            app:layout_constraintTop_toTopOf="@id/cardProfil"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSexAge"
            android:text="Homme - 26 ans"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/cardProfil"
            app:layout_constraintTop_toBottomOf="@id/txtUsername"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgnoGmail"
            android:src="@drawable/iconsgmail"
