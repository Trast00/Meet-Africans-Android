<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    tools:context=".DetailProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constDetail"
            android:minHeight="650dp">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:id="@+id/imgProfileDetail"
                android:scaleType="centerCrop"
                android:background="@color/purple_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtNameDetail"
                android:text="Name User"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@id/imgProfileDetail"
                app:layout_constraintStart_toEndOf="@id/imgProfileDetail"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtSexAgeDetail"
                android:text="Sexe - Age ans"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/txtNameDetail"
                app:layout_constraintStart_toEndOf="@id/imgProfileDetail"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCountry"
                android:text="Country"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/txtSexAgeDetail"
                app:layout_constraintStart_toEndOf="@id/imgProfileDetail"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imgno1"
                android:src="@drawable/iconsgmail"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/imgProfileDetail"
                app:layout_constraintTop_toBottomOf="@id/txtCountry"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtGmailDetail"
                android:text="dickoallassane@"
                android:textColor="@color/text_black"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/imgno1"
                app:layout_constraintTop_toTopOf="@id/imgno1"
                app:layout_constraintBottom_toBottomOf="@id/imgno1"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imgno2"
                android:src="@drawable/iconswhatsapp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/imgProfileDetail"
                app:layout_constraintTop_toBottomOf="@id/txtGmailDetail"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtwhatsappDetail"
                android:text="dickoallassane@"
                android:textColor="@color/text_black"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/imgno2"
                app:layout_constraintTop_toTopOf="@id/imgno2"
                app:layout_constraintBottom_toBottomOf="@id/imgno2"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imgno3"
                android:src="@drawable/iconsmessenger"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/imgProfileDetail"
                app:layout_constraintTop_toBottomOf="@id/txtwhatsappDetail"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessengerDetail"
                android:text="dickoallassane@"
                android:textColor="@color/text_black"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/imgno3"
                app:layout_constraintTop_toTopOf="@id/imgno3"
                app:layout_constraintBottom_toBottomOf="@id/imgno3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtno1"
                android:text="Rechercher"
                android:textSize="20sp"
                android:textColor="@color/text_black"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/imgProfileDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imgSexWanted"
                android:src="@drawable/iconsmenwomencolored"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtno1"
                app:layout_constraintEnd_toStartOf="@id/txtSexWanted"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtSexWanted"
                android:text="Homme/Femme"
                android:textColor="@color/text_black"
                app:layout_constraintStart_toEndOf="@+id/txtRelationWanted"
                app:layout_constraintEnd_toStartOf="@id/txtAgeWanted"
                app:layout_constraintTop_toTopOf="@id/imgSexWanted"
                app:layout_constraintBottom_toBottomOf="@id/imgSexWanted"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAgeWanted"
                android:text="18 - 99 ans"
                android:textColor="@color/text_black"
                app:layout_constraintStart_toEndOf="@+id/txtSexWanted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtRelationWanted"
                app:layout_constraintBottom_toBottomOf="@id/txtRelationWanted"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imgRelationWanted"
                android:src="@drawable/iconsunknown"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtno1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtRelationWanted"
                android:text="Unknown"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_black"
                app:layout_constraintStart_toEndOf="@id/imgRelationWanted"
                app:layout_constraintTop_toTopOf="@id/imgRelationWanted"
                app:layout_constraintBottom_toBottomOf="@id/imgRelationWanted"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/constBio"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/txtno1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:id="@+id/txtno2"
                    android:textColor="@color/text_black"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:hint="Biographie"
                    android:id="@+id/edlayoutBioDetail"
                    android:layout_width="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtno2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="110dp"
                        android:id="@+id/edBioDetail"
                        android:text=""
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:freezesText="true"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@null"
                        android:ellipsize="end"
                        android:selectAllOnFocus="true"
                        />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBtnDescription"
                android:text="@string/string3"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/text_purple"
                app:layout_constraintBottom_toTopOf="@id/btnContactDetail"
                app:layout_constraintTop_toBottomOf="@id/constBio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/btnContactDetail"
                android:text="Contacter"
                android:textColor="@color/white"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:drawableStart="@drawable/iconskeybtn"
                android:background="@drawable/backgroundbtn"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtBtnDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>