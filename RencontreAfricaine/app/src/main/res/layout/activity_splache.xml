<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splach_screen"
    tools:context=".SplashActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/madeby"
        android:gravity="center"
        android:textSize="11sp"
        android:textColor="#fff"
        android:layout_margin="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/danstouteafrique"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:id="@+id/logo"
            android:src="@drawable/logo_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:id="@+id/progress"
            android:progress="35"
            android:progressTint="#FE59D7"
            android:secondaryProgressTint="#FE59D7"
            app:indicatorColor="#FE59D7"
            android:background="#fff"
            android:progressBackgroundTint="#fff"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="@id/logo"
            app:layout_constraintEnd_toEndOf="@id/logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rencontre Africaine"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/progress"
            app:layout_constraintStart_toStartOf="@+id/logo"
            app:layout_constraintEnd_toEndOf="@id/logo"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>