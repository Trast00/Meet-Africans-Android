<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgProfileItemDiscussion"
        android:src="@color/purple_200"
        android:layout_marginStart="8dp"
        android:foreground="@drawable/profileforground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNameItemProfile"
        android:text="User Name"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgProfileItemDiscussion"
        app:layout_constraintTop_toTopOf="@id/imgProfileItemDiscussion"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="last message description"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="60dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/imgProfileItemDiscussion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgProfileItemDiscussion"
        app:layout_constraintTop_toBottomOf="@id/txtNameItemProfile"/>

</androidx.constraintlayout.widget.ConstraintLayout>