<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:id="@+id/cardItemProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imgProfileItemProfile"
                android:src="@color/purple_200"
                android:background="@color/purple_200"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgRelationItemProfile"
                android:src="@drawable/iconsunknown"
                android:padding="8dp"
                android:background="@drawable/circlewhite"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@id/imgProfileItemProfile"
                app:layout_constraintTop_toBottomOf="@id/imgProfileItemProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCountryItemProfile"
                android:visibility="invisible"
                android:text="Pays"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/imgProfileItemProfile"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtIsOnlineItemProfile"
                android:visibility="invisible"
                android:text="En ligne"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/imgProfileItemProfile"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNameItemProfile"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:text="Name User"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/txtIsOnlineItemProfile"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>