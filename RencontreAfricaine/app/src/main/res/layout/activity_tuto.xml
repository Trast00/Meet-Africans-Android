<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:text="Rencontre facile \net rapide"
        android:gravity="start"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/const1"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:src="@drawable/img_a_tuto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardgirl"
            app:layout_constraintTop_toTopOf="@id/cardgirl"
            app:layout_constraintBottom_toBottomOf="@id/cardgirl"/>


        <ImageView
            android:id="@+id/cardgirl"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/cardgirl_tuto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/const2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/const1">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/cardboy"
            android:src="@drawable/cardboy_tuto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_b_tuto"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/cardboy"
            app:layout_constraintTop_toTopOf="@id/cardboy"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/const3"
        app:layout_constraintTop_toBottomOf="@id/const2">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btnstart"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/const3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>